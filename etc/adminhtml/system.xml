<?xml version="1.0"?>

    <config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
        <system>
            <tab id="qxd" translate="label" sortOrder="50">
                <label>QXD</label>
            </tab>
            <section id="qxdtest_options" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Test</label>
                <tab>qxd</tab>
                <resource>Qxd_Test::config</resource>
                <group id="configure_qxdtest" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Test settings</label>
                    
                    <field id="qxdtest_enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Enable</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>

                    <field id="qxdtest_field" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Test field</label>
                        <validate>required-entry</validate>
                    </field>

                   
                </group>
            </section>
        </system>
    </config>

